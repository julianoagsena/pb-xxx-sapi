<?xml version="1.0" encoding="UTF-8"?>
<mule
	xmlns:salesforce="http://www.mulesoft.org/schema/mule/salesforce"
	xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd
http://www.mulesoft.org/schema/mule/salesforce http://www.mulesoft.org/schema/mule/salesforce/current/mule-salesforce.xsd">
	<flow
		name="get-caseFlow"
		doc:id="8fbbfded-240d-41d4-bd0f-291e39f65938">
		<http:request
			method="POST"
			doc:name="Generate Token"
			doc:id="386f4694-5eb2-482e-9d1a-c69f30174508"
			config-ref="HTTP_Request_configuration"
			target="accessToken"
			targetValue="#[payload.data.access_token]" url="#[Mule::p('certificare.token')]">
			<http:body><![CDATA[#[%dw 2.0
output application/json
---
{
    "username": Mule::p("certificare.oauth.username"),
    "password":  Mule::p("certificare.oauth.password")
}]]]></http:body>
			<http:headers><![CDATA[#[output application/java
---
{
	"Content-Type" : "application/json"
}]]]></http:headers>
		</http:request>
		<ee:transform
			doc:name="var pendencias"
			doc:id="1d431b2b-d006-4b3b-9a0b-b4c143915ae1">
			<ee:message />
			<ee:variables>
				<ee:set-variable variableName="pendencias"><![CDATA[%dw 2.0
output application/json
---
[]]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<foreach
			doc:name="For Each"
			doc:id="6ae50378-7741-4ed5-8249-ecbe2a3cf9de"
			collection="#[payload.entrada.parametros]">
			<ee:transform
				doc:name="request Json"
				doc:id="c08b5842-626d-4903-8d36-14291d8168fc">
				<ee:message />
				<ee:variables>
					<ee:set-variable variableName="requestJson"><![CDATA[%dw 2.0
output application/json
---
{
    "element": if(!isEmpty(payload.grupo)) payload.grupo else payload.tag,
    "siteId": payload.empreendimento
}]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<flow-ref
				doc:name="getPendency"
				doc:id="1e4cf74a-6d7c-4360-8800-bf9e7a37eefb"
				name="getPendency" />
			<ee:transform
				doc:name="pendency Map"
				doc:id="1289b1c7-4ddb-4926-8ffe-e299c73b5dfb">
				<ee:message>
					<ee:set-payload resource="dwl/pendency map.dwl" />
				</ee:message>
			</ee:transform>
			<ee:transform doc:name="clean invalid pendencies" doc:id="39609583-09fc-4035-9c9a-3caba401d83d" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
[
  {
    status: payload[0].status,
    totPaginas: payload[0].totPaginas,
    totRegistros: payload[0].totRegistros,
    pendencias: payload[0].pendencias filter ((pendencia) -> 
      !(pendencia.status == "CANCELED" or pendencia.status == "COMPLETED")) map (pendencia) -> {
           "id": pendencia.id,
           "numero": pendencia.numero,
           "descricao": pendencia.descricao,
           "status": if (pendencia.status ==  "DRAFT") "Rascunho" else
                    if(pendencia.status == "IN_PROGRESS") "Em andamento" else
                    if (pendencia.status == "AWAITING_EVALUATION") "Aguardando Avaliação" else
                    if (pendencia.status == "AWAITING_INFORMATION") "Aguardando Informações" else "",
            "dtCriacao": pendencia.dtCriacao,
            "unidadeOrganizacional": "",
            "grupo": pendencia.grupo,
            "url": pendencia.url,
            "documento": pendencia.documento
      }
  }
]]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<ee:transform
				doc:name="concatenate pendencies"
				doc:id="5fc37a75-ead1-4cf9-a511-12e77950f43b">
				<ee:message>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="pendencias"><![CDATA[%dw 2.0
output application/json
---
payload ++ vars.pendencias]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
		</foreach>
		<ee:transform
			doc:name="final payload"
			doc:id="8fd897d9-e0ec-4325-a7bf-ef035ae778ac">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
	saida: {
    status: "1",
    totPaginas: sum(vars.pendencias.*totPaginas),
    totRegistros: sum(vars.pendencias.*totRegistros),
    pendencias: flatten(vars.pendencias.*pendencias)
    }]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger
			level="INFO"
			doc:name="Logger"
			doc:id="44a2a1d1-a2c9-4f6c-8211-4c23dd759c13"
			message="payload" />
	</flow>
	<flow
		name="getPendency"
		doc:id="2d88832c-15ef-4c6a-8e22-bc42fd77bdb1">
		<http:request
			method="GET"
			doc:name="Get Pendency Certificare"
			doc:id="c6d77a64-a91f-4271-a02c-ea203c07cb60"
			config-ref="HTTP_Request_configuration"
			target="responseCertificare" url="#[Mule::p('certificare.pendency')]">
			<http:headers><![CDATA[#[output application/java
---
{
	"Authorization" : "Bearer " ++ vars.accessToken
}]]]></http:headers>
			<http:query-params><![CDATA[#[output application/java
---
{
	childrenPendency : true,
	siteId : vars.requestJson.siteId,
	element : vars.requestJson.element
}]]]></http:query-params>
		</http:request>
		<error-handler>
			<on-error-continue
				enableNotifications="true"
				logException="true"
				doc:name="On Error Continue"
				doc:id="1f0074ab-b616-43af-b6ed-a8141391988f"
				type="HTTP:BAD_REQUEST">
				<ee:transform
					doc:name="empty payload"
					doc:id="842bad90-d9dd-4e00-9476-e4a82bddf3c6">
					<ee:message>
					</ee:message>
					<ee:variables>
						<ee:set-variable variableName="responseCertificare"><![CDATA[%dw 2.0
output application/java
---
[]]]></ee:set-variable>
					</ee:variables>
				</ee:transform>
			</on-error-continue>
		</error-handler>
	</flow>
</mule>